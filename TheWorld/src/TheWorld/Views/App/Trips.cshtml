@model IEnumerable<TheWorld.Models.Trip>
@{
    ViewBag.Title = "Home Page";
}
@section Scripts{
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/js/app-trips.js"></script>
    <script src="~/js/tripsController.js"></script>
    <script src="~/js/simple-controls.js"></script>
}
<div class="row" data-ng-app="app-trips">
    <div data-ng-controller="tripsController as viewModel" class="col-md-6 col-md-offset-3">
        <div class="text-danger" ng-show="viewModel.errorMessage">{{viewModel.errorMessage}}</div>
        <wait-cursor display-when="viewModel.isBusy"></wait-cursor>
        <table class="table table-striped table-responsive">
            <tr ng-repeat="trip in viewModel.trips">
                <td>{{trip.name}}</td>
                <td>{{trip.created | date}}</td>
                <td><a href="#" class="btn btn-lrg btn-success">Manage</a></td>
            </tr>
        </table>
        <form novalidate name="newTripForm" ng-submit="viewModel.addTrip()">
            <div class="form-group">
                <label for="name">Trip Name</label>
                <input class="form-control" id="name" name="name" ng-model="viewModel.newTrip.name" required data-ng-minlength="5"/>
                <span ng-show="newTripForm.name$error.required" class="warning">Name is required</span>
                <span ng-show="newTripForm.name$error.minlength" class="warning">Mininum length is 5</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-lrg btn-success" ng-disabled="newTripForm.$invalid"/>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h1>Hello World</h1>
        <p>This is gonna be sweet</p>
        <form>
            <div class="form-group">
                <label>Date</label>
                <input class="form-control"/>
            </div>
            <div class="form-group">
                <label>Location</label>
                <input class="form-control" />
            </div>
            <div><input type="submit" value="Add" class="btn btn-success"/></div>
        </form>
    </div>
    <div class="col-md-6">
        <h2>The Map</h2>
        <ul>
            @foreach (var trip in Model)
            {
                <li>@trip.Name</li>

            }
        </ul>
    </div>
</div>
